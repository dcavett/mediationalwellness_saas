<div class="jumbotron text-center">
  <h1>Welcome to Intervention Wellness Training</h1>
  <h3>A site that provides lessons, tools, and surveys to allow individuals to practice meditation and provide feedback</h3>
</div>

<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
      <% if current_user.profile %>
        <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %> <br/>
      <% else %>
        <p class="text-center">Create your profile so that you can share your information</p>
        <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
      <% end %>
      </div>
    </div>
    <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Lessons</h2>
            <p class="text-center">Visit the lesson plans to access online materials</p>
              <%= link_to "Visit the Lesson Plan", "#", class: 'btn btn-default btn-lg btn-block' %>
        </div>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Sign Up for the Online Community</h2>
        <h4 class="text-center">Sign up and gain access to the online portion of the study.</h4>
        </br>
      <%= link_to "Sign up for the Online Community", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Sign up for the In-Person Group</h2>
        <h4 class="text-center">Sign up and gain access to the in-person portion of the study.</h4>
        </br>
          <%= link_to "Sign up for the In-Person Group", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>