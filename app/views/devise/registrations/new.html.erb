<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>    
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <% if params[:plan] == '2' %>
        <h1>In-Person Account</h1>
        <p class="lead">Sign up for your free account today</p>
        <% else %>
        <h1>Online Learning Account</h1>
        <p class="lead">Sign up for your free account today</p>
        <% end %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h2>Sign up</h2>
          <% if params[:plan] == '1' %>
          <%= render "basic_form" %>
          <% else %>
          <%= render "pro_form" %>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </body>
</html>